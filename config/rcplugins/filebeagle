" [FILEBEAGLE]
" Like netrw but less buddy
"
" Key bindings
"
"     -
"       Open file browser
"       NORMAL MODE
"
"     <leader>fb
"       File Browser
"       NORMAL MODE
" 
"

Plug 'jeetsukumaran/vim-filebeagle'

" file-beagle uses <leader>f, don't want that mapping
let g:filebeagle_suppress_keymaps = 1
map <silent> - <Plug>FileBeagleOpenCurrentBufferDir
map <silent> <leader>fb <Plug>FileBeagleOpenCurrentBufferDir

" vim:ft=vim
