#! /bin/bash

read -p "Are you sure you want to delete your '.vimrc' file? This cannot be undone [Y/n]: " -n 1 -r
echo

uninstall() {
  rm ~/.vimrc
  rm ~/.vimo

  if [[ -f "$HOME/.vimrc.old" ]];
  then
    mv ~/.vimrc.old ~/.vimrc
  fi

  echo "Vimo has been removed."
}

[[ $REPLY =~ ^[Y/y]$ ]] && uninstall
