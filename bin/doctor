#! /bin/bash

# This is Vimo's doctor. It will tell you if your system needs to install
# something in order for Vimo to work.
#
# It checks for:
# - git
# - vim 8
# - .vim/tmp directory
# - vim plug
# - ctags (optional)
# - Source Code Pro font (optional)

# Helper functions
# ========================================
ok() {
  printf "  - OK: %s" "$1"
  echo ""
}

fail() {
  printf "  - ERROR: %s" "$1"
  echo ""
}

warn() {
  printf "  - WARN: %s" "$1"
}

hasGit() {
  [[ $(command -v git) ]];
}

hasCTags() {
  [[ $(command -v ctags) ]];
}

hasVim8() {
  [[ "$(vim --version | sed -n '/Vi IMproved 8\./p')" =~ Vi\ IMproved\ 8\.[0-9]+ ]];
}

hasAnyVim() {
  [[ "$(command -v vim)" ]];
}

hasVimPlug() {
  [[ -e "$HOME/.vim/autoload/plug.vim" ]];
}

hasVimTempDir() {
  [[ -e "$HOME/.vim/tmp" ]];
}

hasFontConfig() {
  [[ $(command -v fc-list) ]];
}

hasAg() {
  [[ $(command -v ag) ]];
}

printDocumentationFor() {
  if [[ $1 -gt 0 ]];
  then
    echo ""
    echo ""

    for error in $1
    do
      cat "$DOCUMENTATION_DIR/${error}_instructions.txt"
    done
  fi
}

# State
# ========================================
errors=()
warns=()
CURRENT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DOCUMENTATION_DIR="$(realpath "$CURRENT_DIR/../doc")"

# Start of script
# ========================================
echo "===================================="
echo "     Vimo - Batteries-included"
echo "      configuration for Vim!"
echo "===================================="
echo "* Running Doctor..."
echo ""

# Check for git
if hasGit
then
  ok "Git"
else
  fail "Git"
  errors+=("git")
fi

# Check for Vim 8
if hasVim8
then
  ok "Vim 8"
else
  fail "Vim 8"

  if hasAnyVim
  then
    errors+=("vim_update")
  else
    errors+=("vim")
  fi
fi

# Ctags
if hasCTags
then
  ok "CTags"
else
  warn "CTags"
  warns+=("ctags")
fi

# Vim-Plug
if hasVimPlug
then
  ok "Vim Plug"
else
  fail "Vim Plug"
  errors+=("vim_plug")
fi

# Vim temp dir, used for swap files
if hasVimTempDir
then
  ok "~/.vim/tmp/"
else
  if [[ $(mkdir -p "$HOME/.vim/tmp") ]];
  then
    ok "~/.vim/tmp/"
  else
    fail "Vim's tmp folder"
    errors+=("vim_tmp_dir")
  fi
fi

# Check for ag
if hasAg
then
  ok "ag (the silver searcher)"
else
  fail "ag (the silver searcher)"
  errors+=("ag")
fi

# Check for font
checkForGuiFont() {
  if fc-list | grep -q "Source Code Pro"
  then
    ok "Font installed (Source Code Pro)"
  else
    warn "Source Code Pro"
    warns+=('source_code_pro')
  fi
}

if hasFontConfig
then
  checkForGuiFont
else
  warn "fontconfig"
  warns+=("fontconfig")
fi

# Display errors
printDocumentationFor "${errors[@]}"
# if there's an error, exit with code 1 to signal error
[[ ${#errors[@]} -gt 0 ]] && exit 1

# Display warnings
printDocumentationFor "${warns[@]}"

echo ""
